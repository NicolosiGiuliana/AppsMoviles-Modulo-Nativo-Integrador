<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.trabajointegradornativo.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
    </fragment>

    <!-- Lista de desafíos (HOME) -->
    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.example.trabajointegradornativo.ItemListFragment"
        android:label="Desafíos"
        tools:layout="@layout/fragment_item_list">

        <!-- Acciones existentes -->
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_itemListFragment_to_createDesafioFragment"
            app:destination="@id/createDesafioFragment" />

        <!-- Navegación inferior -->
        <action
            android:id="@+id/action_itemListFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
        <action
            android:id="@+id/action_itemListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_itemListFragment_to_publicChallengeFragment"
            app:destination="@id/publicChallengeFragment" />
        <action
            android:id="@+id/action_itemListFragment_to_challengePreviewFragment"
            app:destination="@id/challengePreviewFragment" />
    </fragment>

    <!-- Detalle del desafío -->
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.trabajointegradornativo.ItemDetailFragment"
        android:label="Detalle del desafío"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="item_id"
            app:argType="string" />
        <action
            android:id="@+id/action_itemDetailFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_editDesafioFragment"
            app:destination="@id/editDesafioFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_itemDetailFragment_to_publicChallengeFragment"
            app:destination="@id/publicChallengeFragment" />
    </fragment>

    <!-- Crear desafío -->
    <fragment
        android:id="@+id/createDesafioFragment"
        android:name="com.example.trabajointegradornativo.CreateChallengeFragment"
        android:label="Crear Desafío"
        tools:layout="@layout/fragment_create_challenge">
        <action
            android:id="@+id/action_createDesafioFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
    </fragment>

    <!-- Fragment Today -->
    <fragment
        android:id="@+id/todayFragment"
        android:name="com.example.trabajointegradornativo.TodayFragment"
        android:label="Hoy"
        tools:layout="@layout/action_to_today_fragment">

        <!-- AGREGAR ESTA ACCIÓN PARA NAVEGAR AL DETALLE -->
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/itemDetailFragment" />

        <!-- Acción para navegar al detalle del item -->
        <action
            android:id="@+id/action_todayFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />

        <!-- Navegación inferior desde Today -->
        <action
            android:id="@+id/action_todayFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
        <action
            android:id="@+id/action_todayFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_todayFragment_to_publicChallengeFragment"
            app:destination="@id/publicChallengeFragment" />

        <fragment
            android:id="@+id/todayFragment"
            android:name="com.example.trabajointegradornativo.TodayFragment"
            android:label="TodayFragment">

            <!-- AGREGAR ESTA ACCIÓN -->
            <action
                android:id="@+id/action_todayFragment_to_itemDetailFragment"
                app:destination="@id/itemDetailFragment" />

            <!-- O esta si usas show_item_detail -->
            <action
                android:id="@+id/show_item_detail"
                app:destination="@id/itemDetailFragment" />

        </fragment>

    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.trabajointegradornativo.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/profile_fragment">

        <!-- Navegación inferior desde Profile -->
        <action
            android:id="@+id/action_profileFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
        <action
            android:id="@+id/action_profileFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
        <action
            android:id="@+id/action_profileFragment_to_publicChallengeFragment"
            app:destination="@id/publicChallengeFragment" />

        <!-- Acción especial para logout -->
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Public Challenge Fragment -->
    <fragment
        android:id="@+id/publicChallengeFragment"
        android:name="com.example.trabajointegradornativo.PublicChallengeFragment"
        android:label="Desafíos Públicos"
        tools:layout="@layout/fragment_public_challenge">

        <!-- Navegación inferior desde Public Challenge -->
        <action
            android:id="@+id/action_publicChallengeFragment_to_itemListFragment"
            app:destination="@id/itemListFragment" />
        <action
            android:id="@+id/action_publicChallengeFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
        <action
            android:id="@+id/action_publicChallengeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_publicChallengeFragment_to_challengePreviewFragment"
            app:destination="@id/challengePreviewFragment" />
    </fragment>

    <!-- Edit Desafio Fragment -->
    <fragment
        android:id="@+id/editDesafioFragment"
        android:name="com.example.trabajointegradornativo.EditDesafioFragment"
        android:label="Editar Desafío"
        tools:layout="@layout/fragment_edit_desafio" />

    <fragment
        android:id="@+id/challengePreviewFragment"
        android:name="com.example.trabajointegradornativo.ChallengePreviewFragment"
        android:label="Challenge Preview"
        tools:layout="@layout/fragment_preview_challenge" />

</navigation>

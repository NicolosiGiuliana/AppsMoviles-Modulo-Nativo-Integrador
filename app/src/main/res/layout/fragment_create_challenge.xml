<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- T칤tulo principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Desaf칤o"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Subt칤tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu rutina personalizada"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginBottom="24dp" />

        <!-- Nombre del desaf칤o -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del desaf칤o"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputChallengeName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ej: Mi rutina matutina"
            android:inputType="textCapWords"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Duraci칩n -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duraci칩n"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Opciones de duraci칩n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/option30Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="30 d칤as"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:background="@drawable/duration_selected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/option45Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="45 d칤as"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="@drawable/duration_unselected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/option75Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="75 d칤as"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="@drawable/duration_unselected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- H치bitos diarios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H치bitos diarios (3-5)"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Contenedor de h치bitos -->
        <LinearLayout
            android:id="@+id/habitosContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- H치bito 1 -->
            <EditText
                android:id="@+id/inputHabit1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="H치bito 1"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- H치bito 2 -->
            <EditText
                android:id="@+id/inputHabit2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="H치bito 2"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- H치bito 3 -->
            <EditText
                android:id="@+id/inputHabit3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="H치bito 3"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Bot칩n agregar h치bito -->
            <TextView
                android:id="@+id/buttonAddHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Agregar h치bito"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
        <!-- Secci칩n de Ubicaci칩n Opcional -->
        <CheckBox
            android:id="@+id/checkboxUbicacionOpcional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Agregar ubicaci칩n (opcional)"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutSelectLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@drawable/edittext_background"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicaci칩n del desaf칤o"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:id="@+id/textUbicacionSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/edittext_background"
                android:padding="@dimen/padding_medium"
                android:text="No hay ubicaci칩n seleccionada"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonObtenerUbicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@drawable/button_secondary_background"
                    android:text="Obtener mi ubicaci칩n"
                    android:textColor="@color/green_primary"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/buttonEliminarUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_secondary_background"
                    android:text="Eliminar"
                    android:textColor="@color/primary_green"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/padding_medium" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="游눠 Tip: Te ayudar치 a recordar d칩nde realizar tus h치bitos"
                android:textColor="@color/text_hint_ubi"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Bot칩n crear desaf칤o -->
        <Button
            android:id="@+id/buttonCreateChallenge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Crear Desaf칤o"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Bot칩n cancelar -->
        <TextView
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_challenge"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_custom_routine"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginBottom="24dp" />

        <!-- Nombre del desafío -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_name"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputChallengeName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/challenge_name_hint"
            android:inputType="textCapWords"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Duración -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Opciones de duración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/option30Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/days_30"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:background="@drawable/duration_selected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/option45Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/days_45"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="@drawable/duration_unselected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/option75Days"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/days_75"
                android:textSize="14sp"
                android:textColor="#999999"
                android:background="@drawable/duration_unselected_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Hábitos diarios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_habits"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Contenedor de hábitos -->
        <LinearLayout
            android:id="@+id/habitosContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hábito 1 -->
            <EditText
                android:id="@+id/inputHabit1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/habit_1"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- Hábito 2 -->
            <EditText
                android:id="@+id/inputHabit2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/habit_2"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <!-- Hábito 3 -->
            <EditText
                android:id="@+id/inputHabit3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/habit_3"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Botón agregar hábito -->
            <TextView
                android:id="@+id/buttonAddHabit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_habit"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Sección de Etiquetas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tags_description"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="12dp" />

        <!-- Input para agregar etiquetas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/inputNewTag"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/add_tag_hint"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColorHint="#CCCCCC"
                android:layout_marginEnd="8dp"
                android:maxLength="20" />

            <Button
                android:id="@+id/buttonAddTag"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/add"
                android:background="@drawable/button_secondary_background"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

        <!-- Contenedor de etiquetas agregadas -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/tagsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />

        </HorizontalScrollView>

        <!-- Visibilidad del desafío -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_visibility"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visibility_description"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginBottom="12dp" />

        <!-- RadioGroup para visibilidad -->
        <RadioGroup
            android:id="@+id/radioGroupVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioPublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_challenge"
                android:textSize="14sp"
                android:textColor="#333333"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_description"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="12dp" />

            <RadioButton
                android:id="@+id/radioPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_challenge"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_description"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="12dp" />

        </RadioGroup>

        <!-- Sección de Ubicación Opcional -->
        <CheckBox
            android:id="@+id/checkboxUbicacionOpcional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/add_location_optional"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutSelectLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:background="@drawable/edittext_background"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/challenge_location"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small" />

            <TextView
                android:id="@+id/textUbicacionSeleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/edittext_background"
                android:padding="@dimen/padding_medium"
                android:text="@string/no_location_selected"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonObtenerUbicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@drawable/button_secondary_background"
                    android:text="@string/get_my_location"
                    android:textColor="@color/green_primary"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/buttonEliminarUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_secondary_background"
                    android:text="@string/remove"
                    android:textColor="@color/primary_green"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/padding_medium" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/location_tip"
                android:textColor="@color/text_hint_ubi"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Botón crear desafío -->
        <Button
            android:id="@+id/buttonCreateChallenge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/create_challenge"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Botón cancelar -->
        <TextView
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
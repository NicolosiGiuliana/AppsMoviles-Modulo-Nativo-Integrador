<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/challenge_preview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChallengePreviewFragment">

    <!-- Botón de cerrar/volver -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_close_preview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFFFFF">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            app:tint="#666666" />

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="80dp"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del Desafío -->
            <TextView
                android:id="@+id/challenge_title_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2E3A59"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- Autor del desafío -->
            <TextView
                android:id="@+id/challenge_author_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author_prefix_at"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Descripción del Desafío -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/challenge_description_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#5A6C7D"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lista de Hábitos (solo lectura) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habits_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/habits_container_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Los hábitos se agregan programáticamente aquí -->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Etiquetas del Desafío -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tags_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/tags_container_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:alignItems="center"
                        app:justifyContent="flex_start">

                        <!-- Las etiquetas se agregan programáticamente aquí -->

                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Duración -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_today"
                        android:layout_marginBottom="12dp"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_title"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/challenge_duration_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/days_30"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botón "Usar Desafío" - Fijo en la parte inferior -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_use_challenge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        android:backgroundTint="#4CAF50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:layout_marginEnd="8dp"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_boton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
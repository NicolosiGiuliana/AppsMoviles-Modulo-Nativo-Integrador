<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ItemDetailHostActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="100dp">

        <!-- CONTAINER PRINCIPAL AGREGADO -->
        <LinearLayout
            android:id="@+id/main_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del Desafío -->
            <TextView
                android:id="@+id/challenge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/challenge_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2E3A59"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp" />

            <!-- SECCIÓN DE PROGRESO AGREGADA -->
            <LinearLayout
                android:id="@+id/progress_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Banner circular con contador de días -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/progress_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:background="@drawable/progress_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center"
                        android:background="@drawable/progress_card_background">

                        <!-- Círculo de progreso -->
                        <RelativeLayout
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginBottom="24dp"
                            android:rotation="45">

                            <ProgressBar
                                android:id="@+id/circular_progress"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:indeterminate="false"
                                android:progress="75"
                                android:max="100"
                                android:progressDrawable="@drawable/circular_progress_modern"
                                style="?android:attr/progressBarStyleHorizontal" />

                            <TextView
                                android:id="@+id/progress_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:rotation="-45" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/progress_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/excellent_progress"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/progress_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/days_completed_consecutive"
                            android:textSize="16sp"
                            android:textColor="#E8F5E8"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:alpha="0.9" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- FIN SECCIÓN DE PROGRESO -->

            <!-- NUEVA SECCIÓN DE FINALIZACIÓN -->
            <LinearLayout
                android:id="@+id/finalizacion_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                android:visibility="gone">

                <!-- Card principal de finalización -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#E8F5E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center">

                        <!-- Título de finalización -->
                        <TextView
                            android:id="@+id/titulo_finalizacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¡Desafío Finalizado!"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"
                            android:gravity="center"
                            android:layout_marginBottom="24dp" />

                        <!-- Icono de éxito -->
                        <ImageView
                            android:id="@+id/icono_finalizacion"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_check_green"
                            android:layout_marginBottom="24dp"
                            app:tint="#4CAF50" />

                        <!-- Mensaje de felicitación -->
                        <TextView
                            android:id="@+id/mensaje_felicitacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¡Felicitaciones! Has completado tu desafío con éxito. Tu dedicación y constancia han dado frutos."
                            android:textSize="16sp"
                            android:textColor="#5A6C7D"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="24dp" />

                        <!-- Estadísticas finales -->
                        <TextView
                            android:id="@+id/estadisticas_finales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cargando estadísticas..."
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59"
                            android:gravity="center"
                            android:layout_marginBottom="32dp" />

                        <!-- Botón finalizar -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/boton_finalizar_desafio"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Finalizar Desafío"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_solid_green"
                            android:backgroundTint="@color/primary_green"
                            android:layout_marginBottom="16dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- FIN SECCIÓN DE FINALIZACIÓN -->

            <!-- Descripción del Desafío -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/challenge_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#5A6C7D"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lista de Hábitos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <LinearLayout
                    android:id="@+id/item_habits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habits_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3A59"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/habits_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Ejemplo de hábito -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:background="@drawable/habit_item_background"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check_green"
                                android:layout_marginEnd="12dp"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:textColor="#2E3A59" />

                        </LinearLayout>

                        <!-- Agregar más hábitos aquí programáticamente -->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Etiquetas del Desafío -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#F8F9FA"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/item_etiquetas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/tags_title"
                        android:textColor="#2E3A59"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/tags_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignItems="center"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start">

                        <!-- Las etiquetas se agregan programáticamente aquí -->

                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Duración y Estado del Día -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Duración -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#E3F2FD">

                    <LinearLayout
                        android:id="@+id/item_duracion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_today"
                            android:layout_marginBottom="12dp"
                            app:tint="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/duration_title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/challenge_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/duration_days_format"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Estado del Día -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#E8F5E8">

                    <LinearLayout
                        android:id="@+id/item_estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/day_status_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_check_green"
                            android:layout_marginBottom="12dp"
                            app:tint="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_status_title"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/day_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_completed"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- MAPA MOVIDO AQUÍ: Después de Duración y Estado del Día -->
            <androidx.cardview.widget.CardView
                android:id="@+id/location_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/item_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location_on"
                            android:layout_marginEnd="8dp"
                            app:tint="#2E3A59" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación del Desafío"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2E3A59" />

                    </LinearLayout>

                    <org.osmdroid.views.MapView
                        android:id="@+id/challenge_map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/location_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#5A6C7D"
                        android:gravity="center"
                        android:text="Cargando dirección..." />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!-- FIN CONTAINER PRINCIPAL -->

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/edit"
        app:backgroundTint="@color/error_red"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp" />

    <!-- Botón Circular de Edición - Flotante REPOSICIONADO -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="170dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/edit"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF"
        app:fabSize="normal"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingVertical="12dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_home"
                android:contentDescription="@string/home"
                app:tint="@color/gray_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_today"
                android:contentDescription="@string/today"
                app:tint="@color/gray_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/explore"
                android:src="@drawable/ic_search"
                app:tint="@color/gray_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/explore"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/settings"
                app:tint="@color/gray_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
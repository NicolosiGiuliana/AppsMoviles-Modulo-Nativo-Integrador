<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrabajoIntegradorNativo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Configura el ActionBar verde directamente en el tema principal -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="Theme.TrabajoIntegradorNativo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_green</item>
    </style>

    <!-- Estilo personalizado para ActionBar verde -->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary_green</item>
        <item name="background">@color/primary_green</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <!-- Estilo para el texto del tÃ­tulo del ActionBar -->
    <style name="CustomActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.TrabajoIntegradorNativo.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/primary_green</item>
    </style>

    <style name="Theme.TrabajoIntegradorNativo.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>